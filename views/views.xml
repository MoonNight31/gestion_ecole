<odoo>
  <data>

    <record id="view_rp_tree" model="ir.ui.view">
        <field name="name">res.partner.rp.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" string="ID RP" width="50px"/>
                <field name="display_name" string="Nom &amp; Prénom"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="write_date" string="Dernière MAJ" widget="date"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_school_form" model="ir.ui.view">
        <field name="name">res.partner.school.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Smart button pour les filiales -->
            <div name="button_box" position="inside">
                <button name="action_view_subsidiaries" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-building-o"
                        invisible="not is_group">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="subsidiary_count"/></span>
                        <span class="o_stat_text">Filiales</span>
                    </div>
                </button>
            </div>

            <!-- Ajout des champs is_rp et is_group -->
            <field name="category_id" position="after">
                <group col="4">
                    <field name="is_rp"/>
                    <field name="is_group"/>
                </group>
            </field>

            <!-- Onglets supplémentaires -->
            <notebook position="inside">
                <page string="Infos Admin RP" invisible="not is_rp">
                    <group>
                        <group>
                            <field name="id" string="ID RP (Unique)" readonly="1"/>
                            <field name="create_date" string="Date de création" readonly="1"/>
                            <field name="write_date" string="Dernière modification" readonly="1"/>
                        </group>
                    </group>
                </page>
                <page string="Groupe Info" invisible="not is_group">
                    <group>
                        <field name="siren"/>
                        <field name="siege_social"/>
                    </group>
                </page>
            </notebook>

        </field>
    </record>

    <record id="action_rp_list" model="ir.actions.act_window">
        <field name="name">Mes RP</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_rp_tree"/>
        <field name="domain">[('is_rp', '=', True)]</field>
        <field name="context">{'default_is_rp': True, 'default_is_company': False}</field>
    </record>

    <menuitem id="menu_school_root" name="Gestion École" sequence="10" web_icon="base,static/description/icon.png"/>
    
    <menuitem id="menu_rp" 
              name="Responsables Pédagogiques" 
              parent="menu_school_root" 
              action="action_rp_list" 
              sequence="1"/>

    <record id="view_formation_tree" model="ir.ui.view">
        <field name="name">school.formation.tree</field>
        <field name="model">school.formation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" string="ID" width="50px"/>
                <field name="name"/>
                <field name="rp_id"/>
                <field name="create_date" string="Créée le"/>
                <field name="write_date" string="MàJ le"/>
            </tree>
        </field>
    </record>

    <record id="view_formation_form" model="ir.ui.view">
        <field name="name">school.formation.form</field>
        <field name="model">school.formation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rp_id"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="write_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_formation" model="ir.actions.act_window">
        <field name="name">Formations</field>
        <field name="res_model">school.formation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_formation" 
              name="Formations" 
              parent="menu_school_root" 
              action="action_formation" 
              sequence="2"/>

    <record id="action_group_list" model="ir.actions.act_window">
        <field name="name">Groupes d'Entreprises</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_group', '=', True)]</field>
        <field name="context">{'default_is_group': True, 'default_is_company': True}</field>
    </record>

    <menuitem id="menu_group" 
              name="Groupes Entreprises" 
              parent="menu_school_root" 
              action="action_group_list" 
              sequence="3"/>

  </data>
</odoo>
