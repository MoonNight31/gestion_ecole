<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- ========== RP (Responsable Pédagogique) ========== -->
    <record id="view_rp_tree" model="ir.ui.view">
        <field name="name">res.partner.rp.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" string="ID" width="50px"/>
                <field name="display_name" string="Nom &amp; Prénom"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="formation_count"/>
                <field name="write_date" string="Dernière MAJ" widget="date"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_school_form" model="ir.ui.view">
        <field name="name">res.partner.school.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Ajout du champ is_rp -->
            <field name="category_id" position="after">
                <field name="is_rp"/>
            </field>

            <!-- Onglet supplémentaire pour les RP -->
            <notebook position="inside">
                <page string="Infos Admin RP" invisible="not is_rp">
                    <group>
                        <group>
                            <field name="id" string="ID RP (Unique)" readonly="1"/>
                            <field name="create_date" string="Date de création" readonly="1"/>
                            <field name="write_date" string="Dernière modification" readonly="1"/>
                            <field name="formation_count" string="Nombre de formations"/>
                        </group>
                    </group>
                    <field name="formation_ids">
                        <tree>
                            <field name="type_formation"/>
                            <field name="etudiant_count"/>
                            <field name="create_date"/>
                        </tree>
                    </field>
                </page>
            </notebook>

        </field>
    </record>

    <record id="action_rp_list" model="ir.actions.act_window">
        <field name="name">Responsables Pédagogiques</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_rp_tree"/>
        <field name="domain">[('is_rp', '=', True)]</field>
        <field name="context">{'default_is_rp': True, 'default_is_company': False}</field>
    </record>

    <!-- ========== FORMATION ========== -->
    <record id="view_formation_tree" model="ir.ui.view">
        <field name="name">school.formation.tree</field>
        <field name="model">school.formation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" string="ID" width="50px"/>
                <field name="type_formation"/>
                <field name="rp_id"/>
                <field name="etudiant_count"/>
                <field name="create_date" string="Créée le"/>
                <field name="write_date" string="MàJ le"/>
            </tree>
        </field>
    </record>

    <record id="view_formation_form" model="ir.ui.view">
        <field name="name">school.formation.form</field>
        <field name="model">school.formation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="type_formation"/>
                            <field name="rp_id"/>
                            <field name="etudiant_count"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="write_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Étudiants">
                            <field name="personne_ids" domain="[('type_profil', '=', 'etudiant')]">
                                <tree>
                                    <field name="display_name"/>
                                    <field name="email"/>
                                    <field name="telephone"/>
                                    <field name="type_profil"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_formation" model="ir.actions.act_window">
        <field name="name">Formations</field>
        <field name="res_model">school.formation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ========== ÉTUDIANTS ========== -->
    <record id="view_etudiant_tree" model="ir.ui.view">
        <field name="name">etudiant.tree</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <tree string="Étudiants">
                <field name="nom"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="telephone"/>
                <field name="formation_id"/>
            </tree>
        </field>
    </record>

    <record id="view_etudiant_form" model="ir.ui.view">
        <field name="name">etudiant.form</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <form string="Étudiant">
                <sheet>
                    <group>
                        <group string="Informations personnelles">
                            <field name="nom" required="1"/>
                            <field name="prenom" required="1"/>
                            <field name="email"/>
                            <field name="telephone"/>
                        </group>
                        <group string="Scolarité">
                            <field name="formation_id" required="1"/>
                            <field name="is_alumni"/>
                            <field name="type_profil" invisible="1"/>
                        </group>
                    </group>
                    <group string="Adresse">
                        <field name="adresse" placeholder="Adresse complète..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_etudiant" model="ir.actions.act_window">
        <field name="name">Étudiants</field>
        <field name="res_model">school.personne</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type_profil', '=', 'etudiant')]</field>
        <field name="context">{'default_type_profil': 'etudiant'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_etudiant_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_etudiant_form')})]"/>
    </record>

    <!-- ========== ALUMNI ========== -->
    <record id="view_alumni_tree" model="ir.ui.view">
        <field name="name">alumni.tree</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <tree string="Alumni">
                <field name="nom"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="telephone"/>
                <field name="formation_id"/>
                <field name="poste"/>
            </tree>
        </field>
    </record>

    <record id="view_alumni_form" model="ir.ui.view">
        <field name="name">alumni.form</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <form string="Alumni">
                <sheet>
                    <group>
                        <group string="Informations personnelles">
                            <field name="nom" required="1"/>
                            <field name="prenom" required="1"/>
                            <field name="email"/>
                            <field name="telephone"/>
                        </group>
                        <group string="Parcours">
                            <field name="formation_id"/>
                            <field name="poste"/>
                            <field name="type_profil" invisible="1"/>
                            <field name="is_alumni" invisible="1"/>
                        </group>
                    </group>
                    <group string="Adresse">
                        <field name="adresse" placeholder="Adresse complète..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alumni" model="ir.actions.act_window">
        <field name="name">Alumni</field>
        <field name="res_model">school.personne</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type_profil', '=', 'alumni')]</field>
        <field name="context">{'default_type_profil': 'alumni', 'default_is_alumni': True}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_alumni_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_alumni_form')})]"/>
    </record>

    <!-- ========== INTERVENANTS ========== -->
    <record id="view_intervenant_tree" model="ir.ui.view">
        <field name="name">intervenant.tree</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <tree string="Intervenants">
                <field name="nom"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="telephone"/>
                <field name="poste"/>
            </tree>
        </field>
    </record>

    <record id="view_intervenant_form" model="ir.ui.view">
        <field name="name">intervenant.form</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <form string="Intervenant">
                <sheet>
                    <group>
                        <group string="Informations personnelles">
                            <field name="nom" required="1"/>
                            <field name="prenom" required="1"/>
                            <field name="email"/>
                            <field name="telephone"/>
                        </group>
                        <group string="Professionnel">
                            <field name="poste"/>
                            <field name="type_profil" invisible="1"/>
                            <field name="is_intervenant" invisible="1"/>
                        </group>
                    </group>
                    <group string="Adresse">
                        <field name="adresse" placeholder="Adresse complète..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_intervenant" model="ir.actions.act_window">
        <field name="name">Intervenants</field>
        <field name="res_model">school.personne</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type_profil', '=', 'intervenant')]</field>
        <field name="context">{'default_type_profil': 'intervenant', 'default_is_intervenant': True}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_intervenant_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_intervenant_form')})]"/>
    </record>

    <!-- ========== VUE GÉNÉRIQUE PERSONNES (pour accès complet) ========== -->
    <record id="view_personne_tree" model="ir.ui.view">
        <field name="name">school.personne.tree</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <tree string="Toutes les Personnes">
                <field name="nom"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="telephone"/>
                <field name="type_profil"/>
                <field name="formation_id"/>
            </tree>
        </field>
    </record>

    <record id="view_personne_form" model="ir.ui.view">
        <field name="name">school.personne.form</field>
        <field name="model">school.personne</field>
        <field name="arch" type="xml">
            <form string="Personne">
                <sheet>
                    <group>
                        <group>
                            <field name="nom"/>
                            <field name="prenom"/>
                            <field name="email"/>
                            <field name="telephone"/>
                        </group>
                        <group>
                            <field name="type_profil"/>
                            <field name="is_alumni"/>
                            <field name="is_intervenant"/>
                            <field name="poste"/>
                        </group>
                    </group>
                    <group>
                        <field name="adresse" placeholder="Adresse complète..."/>
                    </group>
                    <group>
                        <field name="formation_id" invisible="type_profil not in ('etudiant', 'alumni')"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_personne" model="ir.actions.act_window">
        <field name="name">Toutes les Personnes</field>
        <field name="res_model">school.personne</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ========== MENU ========== -->
    <menuitem id="menu_school_root" 
              name="Gestion École" 
              sequence="10" 
              web_icon="base,static/description/icon.png"/>
    
    <menuitem id="menu_rp" 
              name="Responsables Pédagogiques" 
              parent="menu_school_root" 
              action="action_rp_list" 
              sequence="1"/>

    <menuitem id="menu_formation" 
              name="Formations" 
              parent="menu_school_root" 
              action="action_formation" 
              sequence="2"/>

    <menuitem id="menu_etudiant" 
              name="Étudiants" 
              parent="menu_school_root" 
              action="action_etudiant" 
              sequence="3"/>

    <menuitem id="menu_alumni" 
              name="Alumni" 
              parent="menu_school_root" 
              action="action_alumni" 
              sequence="4"/>

    <menuitem id="menu_intervenant" 
              name="Intervenants" 
              parent="menu_school_root" 
              action="action_intervenant" 
              sequence="5"/>

    <menuitem id="menu_personne" 
              name="Toutes les Personnes" 
              parent="menu_school_root" 
              action="action_personne" 
              sequence="6"/>

  </data>
</odoo>
